= form_for @note do |f|
  -if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :color
    = f.collection_select(:color, Note::COLORS, :to_s, :to_s)
  .field
    = f.label :owner
    = f.text_field :owner
  .actions
    = f.submit 'Save'
